<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Primary">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/grid_button"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Menu"
                            android:src="@drawable/ic_grid"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="LNM Track"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/addBtn"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:contentDescription="Add"
                            android:src="@drawable/ic_add"
                            app:tint="#FFFFFF" />
                    </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="#232838"
                            android:orientation="horizontal"
                            android:padding="4dp"
                            android:weightSum="2">

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@color/Secondary"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Theory"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Lab"
                                android:textAllCaps="false"
                                android:textColor="#A1A1AA" />
                        </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingHorizontal="16dp"
                    app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/retry_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/retry_img"
                            android:layout_width="250dp"
                            android:layout_height="220dp"
                            android:layout_gravity="center"
                            android:src="@drawable/retry"
                            android:visibility="visible"
                            app:layout_constraintVertical_bias="0.22" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_bold"
                            android:letterSpacing="0.02"
                            android:text="Oops,Something\n went wrong!"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/retryBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_rounded"
                            android:backgroundTint="@color/Secondary"
                            android:text="RETRY"
                            android:fontFamily="@font/montserrat_bold"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>


                    <ProgressBar
                        android:id="@+id/progress_dashboard"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="50dp"
                        android:visibility="gone"
                        android:indeterminateTint="@color/Secondary" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>



    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:text="Ask AI"
        android:textColor="@color/white"
        app:icon="@drawable/ic_ai_sprinkle"
        app:iconTint="@color/white"
        app:backgroundTint="@color/Primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#232838"
        android:elevation="3dp"
        android:padding="4dp"
        app:cnb_badgeColor="@color/Primary"
        app:cnb_iconColor="@color/Primary"
        app:cnb_iconSize="18sp"
        app:cnb_menuResource="@menu/bottom_menu"
        app:cnb_orientationMode="horizontal"
        app:cnb_radius="40dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <FrameLayout
        android:id="@+id/overlay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2121B2B"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="32dp"
            app:cardBackgroundColor="#222C3D"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="LNMIIT Attendance Portal"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/portal_email"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_field_bg"
                    android:hint="Enter Student Email"
                    android:textColor="#000000"
                    android:padding="12dp"
                    android:textColorHint="#999999" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:id="@+id/portal_password"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/input_field_bg"
                        android:hint="Portal Password"
                        android:inputType="textPassword"
                        android:padding="12dp"
                        android:textColor="#000000"
                        android:textColorHint="#999999" />

                    <ImageView
                        android:id="@+id/info_encryption"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_info"
                        app:tint="#555555"
                        android:contentDescription="Encryption Info" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_portal_submit"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="@color/Secondary"
                    android:text="SUBMIT"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>